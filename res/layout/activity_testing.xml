<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TestingActivity" >

     <TextView
         android:id="@+id/text_detection"
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:layout_alignTop="@+id/text_detectionResult"
         android:layout_marginRight="16dp"
         android:layout_toLeftOf="@+id/text_detectionResult"
         android:gravity="center"
         android:hint="@string/detectIndication"
         android:textSize="15sp" />

     <TextView
         android:id="@+id/text_detectionResult"
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:layout_marginRight="74dp"
         android:layout_marginTop="20dp"
         android:gravity="center"
         android:hint="@string/detectionResult"
         android:textSize="25sp"
         android:textStyle="bold" />

     <EditText
         android:id="@+id/inputChar"
         android:layout_width="fill_parent"
         android:layout_height="50dp"
         android:layout_alignLeft="@+id/text_detection"
         android:layout_centerVertical="true"
         android:ems="10"
         android:hint="@string/correction"
         android:imeOptions="actionSend"
         android:inputType="text"
         android:textStyle="bold" >

         <requestFocus />
     </EditText>
  
</RelativeLayout>
